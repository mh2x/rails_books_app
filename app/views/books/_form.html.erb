<%= form_for(@book) do |f| %>

	<p>
		<%= f.label :title %> 
		<%= f.text_field :title %>	
	</p>

	<p>
		<%= f.label :description %><br> 
		<%= f.text_area :description, cols: 40, rows: 7 %>	
	</p>

	<p>
		<%= f.label :rating %> 
		<%= f.text_field :rating, size:5 %>	
	</p>


	<p>
		<%= f.label :released_on %> 
		<%= f.date_select :released_on %>	
	</p>

	<p>
		<%= f.label :total_gross %> 
		<%= f.number_field :total_gross %>	
	</p>

	<p>
		<%= f.label :cover %> 
		<%= f.text_field :img_file_name %>
	</p>

	<p>
		<%= f.label "Page Count" %> 
		<%= f.text_field :page_count %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
